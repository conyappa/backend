{
  "openapi": "3.0.3",
  "info": {
    "title": "Con Yappa’s API",
    "version": "1.1.0",
    "x-logo": {
      "url": "static/svg/logo.svg",
      "altText": "Con Yappa logo"
    }
  },
  "servers":[
    {
      "url": "http://localhost:8000",
      "description": "Development server"
    },
    {
      "url": "https://api-staging.conyappa.cl",
      "description": "Staging server"
    },
    {
      "url": "https://api.conyappa.cl",
      "description": "Production server"
    }
  ],
  "tags":[
    {
      "name": "Users"
    },
    {
      "name": "Devices"
    },
    {
      "name": "Draws"
    },
    {
      "name": "Tickets"
    },
    {
      "name": "Internal comunication"
    },
    {
      "name": "Misc"
    }
  ],
  "paths": {
    "/v1/login": {
      "post": {
        "summary": "Obtain JSON Web Sliding Token",
        "tags":[
          "Users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./schemas/login.json"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/login.json"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string",
                      "enum":[
                        "No active account found with the given credentials"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/users": {
      "post": {
        "summary": "Create a user",
        "tags":[
          "Users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./schemas/user.json"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/user(created).json"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/user_400"
                }
              }
            }
          }
        }
      }
    },
    "/v1/users/{user_id}": {
      "get": {
        "summary": "Retrieve a user",
        "tags":[
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters":[
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/user.json"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_401"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_403"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_404"
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Update a user",
        "tags":[
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters":[
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/user.json"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/user_400"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_401"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_403"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_404"
                }
              }
            }
          }
        }
      }
    },
    "/v1/users/{user_id}/devices": {
      "post": {
        "summary": "Register a user’s device",
        "tags":[
          "Users",
          "Devices"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters":[
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK (updated if a device with the same OS ID already exists)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/device.json"
                }
              }
            }
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/device.json"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_401"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_403"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_404"
                }
              }
            }
          }
        }
      }
    },
    "/v1/users/{user_id}/tickets": {
      "get": {
        "summary": "Obtain a user’s tickets",
        "description": "Only returns the tickets of the ongoing draw.",
        "tags":[
          "Users",
          "Tickets"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters":[
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "in": "query",
            "name": "page",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            }
          },
          {
            "in": "query",
            "name": "page_size",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 1000,
              "default": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/ticket(paginated).json"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_401"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_403"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "$ref": "#/components/responses/default_404"
                    },
                    {
                      "$ref": "#/components/responses/invalid_page_404"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/v1/draws": {
      "post": {
        "summary": "Create a draw",
        "description": "Creates an empty draw (_i.e._, with no results) and the corresponding tickets for all active users.",
        "tags":[
          "Internal comunication"
        ],
        "security": [
          {
            "internalKey": []
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/draw.json"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_401"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_403"
                }
              }
            }
          }
        }
      }
    },
    "/v1/draws/metadata": {
      "get": {
        "summary": "Retrieve the draws’ metadata",
        "tags":[
          "Draws"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/draws_metadata.json"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_401"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_403"
                }
              }
            }
          }
        }
      }
    },
    "/v1/draws/ongoing": {
      "get": {
        "summary": "Retrieve the ongoing draw",
        "description": "Returns this week’s draw (there is only one).",
        "tags":[
          "Draws"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/draw.json"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_401"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_403"
                }
              }
            }
          }
        }
      }
    },
    "/v1/draws/ongoing/choose": {
      "post": {
        "summary": "Choose a result for the ongoing draw",
        "tags":[
          "Internal comunication"
        ],
        "security": [
          {
            "internalKey": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/draw.json"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_401"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_403"
                }
              }
            }
          }
        }
      }
    },
    "/v1/movements/fetch": {
      "post": {
        "summary": "Fetch bank movements using Fintoc",
        "tags":[
          "Internal comunication"
        ],
        "security": [
          {
            "internalKey": []
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_401"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/default_403"
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "summary": "Health check",
        "tags":[
          "Misc"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error (something’s not right)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string",
                      "enum":[
                        "Can't connect to database.",
                        "Unknown database problem."
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/error": {
      "get": {
        "summary": "Trigger an error",
        "tags":[
          "Misc"
        ],
        "responses": {
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "internalKey": {
        "type": "apiKey",
        "in": "header",
        "name": "Internal-Key"
      }
    },
    "responses": {
      "user_400": {
        "type": "object",
        "properties": {
          "email": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": [
                "This field is required.",
                "user with this email already exists."
              ]
            }
          },
          "password": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": [
                "This field is required.",
                "Ensure this field has no less than 6 characters."
              ]
            }
          },
          "rut": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": [
                "user with this rut already exists.",
                "Don't input this field without a RUT check digit."
              ]
            }
          },
          "check_digit": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": [
                "Don't input this field without a RUT.",
                "Ensure this value is less than or equal to 10.",
                "Ensure this value corresponds to the inputted RUT."
              ]
            }
          }
        }
      },
      "default_401": {
        "oneOf": [
          {
            "type": "object",
            "title": "Missing credentials",
            "properties": {
              "detail": {
                "type": "string",
                "enum":[
                  "Authentication credentials were not provided."
                ]
              }
            }
          },
          {
            "type": "object",
            "title": "Bad header",
            "properties": {
              "detail": {
                "type": "string",
                "enum":[
                  "Authorization header must contain two space-delimited values"
                ]
              },
              "code": {
                "type": "string",
                "enum":[
                  "bad_authorization_header"
                ]
              }
            }
          },
          {
            "type": "object",
            "title": "Invalid token",
            "properties": {
              "detail": {
                "type": "string",
                "enum":[
                  "Given token not valid for any token type"
                ]
              },
              "code": {
                "type": "string",
                "enum":[
                  "token_not_valid"
                ]
              },
              "messages": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              }
            }
          }
        ]
      },
      "default_403": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "string",
            "enum":[
              "You do not have permission to perform this action."
            ]
          }
        }
      },
      "default_404": {
        "type": "object",
        "title": "Resource not found",
        "properties": {
          "detail": {
            "type": "string",
            "enum":[
              "Not found."
            ]
          }
        }
      },
      "invalid_page_404": {
        "type": "object",
        "title": "Invalid page",
        "properties": {
          "detail": {
            "type": "string",
            "enum": [
              "Invalid page."
            ]
          }
        }
      }
    }
  }
}
