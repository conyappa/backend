{
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "readOnly": true
    },
    "email": {
      "type": "string",
      "description": "nullable only for lazy registration",
      "format": "email",
      "maxLength": 254,
      "nullable": true
    },
    "first_name": {
      "type": "string",
      "description": "**set-only** (can only be set once, but not changed)",
      "maxLength": 150
    },
    "last_name": {
      "type": "string",
      "description": "**set-only** (can only be set once, but not changed)",
      "maxLength": 150
    },
    "full_name": {
      "type": "string",
      "maxLength": 301,
      "readOnly": true
    },
    "rut": {
      "type": "integer",
